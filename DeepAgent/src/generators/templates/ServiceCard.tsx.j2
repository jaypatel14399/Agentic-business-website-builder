import Link from 'next/link'
import Image from 'next/image'

interface ServiceCardProps {
  service: {
    name: string
    description: string
    features?: string[]
  }
  imageUrl?: string
}

export default function ServiceCard({ service, imageUrl }: ServiceCardProps) {
  return (
    <div className="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 border border-primary/5 hover:border-primary/20">
      {imageUrl && (
        <div className="relative h-48 w-full bg-surface">
          <Image
            src={imageUrl}
            alt={service.name}
            fill
            className="object-cover"
            sizes="(max-width: 768px) 100vw, 33vw"
            unoptimized
          />
        </div>
      )}
      <div className="p-6">
        <h3 className="font-heading text-2xl font-bold text-content mb-3">
          {service.name}
        </h3>
        <p className="text-content-muted mb-4 leading-relaxed">
          {service.description}
        </p>
        
        {service.features && service.features.length > 0 && (
          <ul className="mb-6 space-y-2">
            {service.features.slice(0, 3).map((feature: string, index: number) => (
              <li key={index} className="flex items-start text-content-muted">
                <svg
                  className="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    strokeLinecap="round"
                    strokeLinejoin="round"
                    strokeWidth="2"
                    d="M5 13l4 4L19 7"
                  />
                </svg>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
        )}
        
        <Link
          href="/contact"
          className="inline-block bg-primary text-white px-6 py-3 rounded-xl font-medium hover:bg-accent transition-all duration-300 text-center w-full"
        >
          Learn More
        </Link>
      </div>
    </div>
  )
}

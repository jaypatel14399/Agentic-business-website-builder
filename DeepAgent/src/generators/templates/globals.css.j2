@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --color-primary: {{ design.color_palette.primary }};
  --color-secondary: {{ design.color_palette.secondary }};
  --color-accent: {{ design.color_palette.accent }};
  --color-background: {{ design.color_palette.background }};
  --color-text: {{ design.color_palette.text }};
  --color-text-muted: {{ design.color_palette.text_muted }};
  --gradient-from: {{ design.color_palette.gradient_from | default(design.color_palette.primary) }};
  --gradient-to: {{ design.color_palette.gradient_to | default(design.color_palette.secondary) }};
  --font-sans: "{{ design.font_body }}", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", sans-serif;
  --font-heading: "{{ design.font_heading }}", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
{% if theme_css_vars and theme_css_vars.get('light') %}
  /* Premium theme variables (light mode) */
  {% for key, value in theme_css_vars.light.items() %}
  --theme-{{ key }}: {{ value }};
  {% endfor %}
{% endif %}
}

{% if theme_css_vars and theme_css_vars.get('dark') and theme_css_vars.dark %}
.dark {
  {% for key, value in theme_css_vars.dark.items() %}
  --theme-{{ key }}: {{ value }};
  {% endfor %}
}
{% endif %}

html {
  transition: background-color 0.25s ease, color 0.25s ease;
}

body {
  font-family: var(--font-sans);
  color: var(--theme-text, var(--color-text));
  background-color: var(--theme-background, var(--color-background));
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  letter-spacing: -0.01em;
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-heading);
  letter-spacing: -0.02em;
  font-weight: 600;
}

/* Premium: gradient text for headings (Apple-style) */
.gradient-text {
  background: linear-gradient(135deg, var(--gradient-from), var(--gradient-to));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Scroll target for #services so it isn't hidden under sticky header */
[id="services"] {
  scroll-margin-top: 5rem;
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
}

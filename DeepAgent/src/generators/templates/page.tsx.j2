import Link from 'next/link'
import Image from 'next/image'
import ServiceCard from '@/components/ServiceCard'
import SEO from '@/components/SEO'

export default function Home() {
  const primaryServices = {{ (services[:3] if services else []) | tojson }};
  const primaryCTA = {{ (call_to_actions[0] if call_to_actions and call_to_actions|length > 0 else "Contact Us Today") | tojson }};
  const heroImage = {{ (image_urls.get('hero', '') if image_urls else '') | tojson }};
  const serviceImageUrls = {{ [image_urls.get('service_' ~ i, '') if image_urls else '' for i in range(3)] | tojson }};

  return (
    <>
      <SEO />
      
      {/* Hero Section - full-page premium with background image */}
      <section className="relative min-h-screen flex items-center justify-center overflow-hidden">
        {heroImage ? (
          <div className="absolute inset-0 z-0">
            <Image
              src={heroImage}
              alt=""
              fill
              className="object-cover"
              priority
              sizes="100vw"
              unoptimized
            />
            <div className="absolute inset-0 bg-primary/85 backdrop-blur-[2px]" />
          </div>
        ) : (
          <div className="absolute inset-0 z-0 bg-gradient-to-br from-primary-600 to-primary-800" />
        )}
        <div className="container relative z-10 mx-auto max-w-6xl px-4 py-24 text-center">
          <h1 className="font-heading text-5xl md:text-7xl font-bold mb-6 text-white drop-shadow-lg">
            {{ business.name }}
          </h1>
          <p className="text-xl md:text-2xl mb-8 text-white/95 font-medium max-w-2xl mx-auto">
            {{ business_info.tagline or ("Quality " ~ business.industry ~ " services in " ~ business.city) }}
          </p>
          <p className="text-lg mb-10 max-w-3xl mx-auto text-white/90 leading-relaxed">
            {{ business_info.description or (business.name ~ " is a " ~ business.industry ~ " business in " ~ business.city ~ (", " ~ business.state if business.state else "") ~ ". We provide quality services to our customers.") }}
          </p>
          {% if business.rating or (business.reviews and business.reviews|length > 0) %}
          <div className="flex flex-wrap justify-center gap-6 mb-8 text-white/90">
            {% if business.rating %}
            <span className="flex items-center gap-2 font-medium">
              <span className="text-accent">★</span> {{ business.rating }} rating
            </span>
            {% endif %}
            {% if business.reviews and business.reviews|length > 0 %}
            <span className="font-medium">{{ business.reviews|length }}+ reviews</span>
            {% endif %}
          </div>
          {% endif %}
          <div className="flex flex-col sm:flex-row gap-4 justify-center">
            <Link
              href="/contact"
              className="inline-block bg-white text-primary-600 px-8 py-4 rounded-xl font-semibold hover:bg-accent hover:text-white transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105"
            >
              {primaryCTA}
            </Link>
            <Link
              href="/#services"
              className="inline-block bg-primary-700/90 text-white px-8 py-4 rounded-xl font-semibold hover:bg-accent transition-all duration-300 border-2 border-white/80 hover:border-accent"
            >
              View Our Services
            </Link>
          </div>
        </div>
      </section>

      {/* Value props / Why choose us - premium strip */}
      <section className="py-16 px-4 border-b border-primary/10 bg-surface/50">
        <div className="container mx-auto max-w-6xl">
          <div className="grid grid-cols-1 md:grid-cols-3 gap-10 text-center">
            <div className="px-4">
              <div className="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-primary/10 text-primary mb-4">
                <svg className="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
              </div>
              <h3 className="font-heading text-xl font-bold text-content mb-2">Quality Assured</h3>
              <p className="text-content-muted text-sm leading-relaxed max-w-xs mx-auto">We stand behind every project with clear standards and reliable results.</p>
            </div>
            <div className="px-4">
              <div className="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-primary/10 text-primary mb-4">
                <svg className="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>
              </div>
              <h3 className="font-heading text-xl font-bold text-content mb-2">Local Experts</h3>
              <p className="text-content-muted text-sm leading-relaxed max-w-xs mx-auto">Serving {{ business.city }}{% if business.state %}, {{ business.state }}{% endif %} and the surrounding area with local knowledge.</p>
            </div>
            <div className="px-4">
              <div className="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-primary/10 text-primary mb-4">
                <svg className="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              </div>
              <h3 className="font-heading text-xl font-bold text-content mb-2">Responsive Service</h3>
              <p className="text-content-muted text-sm leading-relaxed max-w-xs mx-auto">Clear communication and timelines so you know what to expect.</p>
            </div>
          </div>
        </div>
      </section>

      {/* Services Preview Section - full-page feel */}
      <section id="services" className="min-h-screen py-24 px-4 bg-surface flex flex-col justify-center">
        <div className="container mx-auto max-w-6xl">
          <div className="text-center mb-14">
            <h2 className="font-heading text-4xl md:text-5xl font-bold mb-4 gradient-text">
              Our Services
            </h2>
            <p className="text-xl text-content-muted max-w-2xl mx-auto">
              Professional {{ business.industry }} services in {{ business.city }}{% if business.state %}, {{ business.state }}{% endif %}
            </p>
          </div>
          
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {primaryServices.map((service: any, index: number) => (
              <ServiceCard key={index} service={service} imageUrl={serviceImageUrls[index]} />
            ))}
          </div>
          
          <div className="text-center mt-14">
            <Link
              href="/#services"
              className="inline-block bg-primary text-[var(--theme-onPrimary,#fff)] px-8 py-4 rounded-xl font-semibold hover:opacity-90 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
            >
              View All Services
            </Link>
          </div>
        </div>
      </section>

      {/* About Preview Section - full-page premium block */}
      <section className="min-h-screen py-24 px-4 flex flex-col justify-center">
        <div className="container mx-auto max-w-4xl">
          <div className="text-center mb-12">
            <h2 className="font-heading text-4xl md:text-5xl font-bold mb-4 tracking-tight gradient-text">
              About {{ business.name }}
            </h2>
            <p className="text-lg text-content-muted mb-6 leading-relaxed max-w-2xl mx-auto">
              {% if about_content.description %}
              {{ about_content.description[:320] }}{% if about_content.description|length > 320 %}...{% endif %}
              {% else %}
              {{ business.name }} has been serving the {{ business.city }}{% if business.state %}, {{ business.state }}{% endif %} area with reliable {{ business.industry }} services. We focus on quality, transparency, and customer satisfaction on every job.
              {% endif %}
            </p>
            {% if about_content.values and about_content.values|length > 0 %}
            <ul className="flex flex-wrap justify-center gap-3 mb-8">
              {% for value in about_content.values[:4] %}
              <li className="px-4 py-2 rounded-full bg-primary/10 text-primary font-medium text-sm">{{ value }}</li>
              {% endfor %}
            </ul>
            {% endif %}
            <Link
              href="/about"
              className="inline-block bg-primary text-white px-8 py-4 rounded-xl font-semibold hover:bg-accent hover:text-white transition-all duration-300 shadow-lg hover:shadow-xl"
            >
              Learn More About Us
            </Link>
          </div>
        </div>
      </section>

      {% if positive_reviews and positive_reviews|length > 0 or testimonials_section.title %}
      {/* Testimonials Section - positive Google reviews only */}
      <section className="min-h-screen py-24 px-4 bg-surface flex flex-col justify-center">
        <div className="container mx-auto max-w-6xl">
          <div className="text-center mb-12">
            <h2 className="font-heading text-4xl md:text-5xl font-bold mb-4 gradient-text">
              {{ testimonials_section.title or "What Our Customers Say" }}
            </h2>
            <p className="text-content-muted text-lg">Real reviews from Google — positive experiences only.</p>
            {% if testimonials_section.subtitle %}
            <p className="text-xl text-content-muted">
              {{ testimonials_section.subtitle }}
            </p>
            {% endif %}
          </div>
          
          {% if positive_reviews and positive_reviews|length > 0 %}
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for review in positive_reviews %}
            <div className="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border border-primary/10">
              <div className="flex items-center mb-4">
                <div className="flex text-accent">
                  {% for i in range(5) %}
                  <svg className="w-5 h-5 {% if i < (review.rating|int if review.rating else 5) %}text-accent{% else %}text-content-muted/30{% endif %}" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  {% endfor %}
                </div>
              </div>
              {% if review.text %}
              <p className="text-content mb-4 leading-relaxed">"{{ review.text[:200] }}{% if review.text|length > 200 %}...{% endif %}"</p>
              {% endif %}
              {% if review.author_name %}
              <p className="text-sm font-semibold text-content-muted">— {{ review.author_name }}</p>
              {% endif %}
            </div>
            {% endfor %}
          </div>
          {% else %}
          <div className="text-center text-content-muted">
            <p>Customer testimonials coming soon!</p>
          </div>
          {% endif %}
        </div>
      </section>
      {% endif %}

      {/* Final CTA Section - full-page */}
      <section className="min-h-screen py-24 px-4 bg-primary text-white flex flex-col justify-center">
        <div className="container mx-auto max-w-4xl text-center">
          <h2 className="font-heading text-4xl md:text-5xl font-bold mb-6">
            Ready to Get Started?
          </h2>
          <p className="text-xl mb-10 text-white/90">
            Contact us today to learn more about our services and how we can help you.
          </p>
          <Link
            href="/contact"
            className="inline-block bg-white text-primary px-8 py-4 rounded-xl font-semibold hover:bg-accent hover:text-white transition-all duration-300 shadow-xl hover:scale-105"
          >
            {{ call_to_actions[0] if call_to_actions and call_to_actions|length > 0 else "Contact Us Today" }}
          </Link>
        </div>
      </section>
    </>
  )
}
